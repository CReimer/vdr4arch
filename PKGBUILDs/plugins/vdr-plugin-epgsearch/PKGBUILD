# Maintainer: Christopher Reimer <c[dot]reimer[at]googlemail[dot]com>
pkgname=vdr-plugin-epgsearch
pkgver=1.0.1.beta2
_vdrapi=1.7.31
pkgrel=4
pkgdesc="Searchtimer and replacement of the VDR program menu"
url="http://winni.vdr-developer.org/epgsearch"
arch=('x86_64' 'i686')
license=('GPL2')
depends=('pcre' "vdr-api=${_vdrapi}")
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=''
_plugname=$(echo $pkgname | sed 's/vdr-plugin-//g')
source=("http://winni.vdr-developer.org/epgsearch/downloads/beta/vdr-$_plugname-$pkgver.tgz")
md5sums=('8ad2bd6a6557532b388adbf70d87d59a')

package() {
  cd "${srcdir}/${_plugname}-${pkgver}"

  mkdir -p $pkgdir/usr/lib/vdr/plugins
  make CFLAGS="$(pkg-config vdr --variable=plugincflags)" \
       CXXFLAGS="$(pkg-config vdr --variable=plugincflags)" \
       VDRDIR="$(pkg-config vdr --variable=includedir)/vdr" \
       LIBDIR="$pkgdir/$(pkg-config vdr --variable=plugindir)" \
       LOCALEDIR="$pkgdir/$(pkg-config vdr --variable=localedir)" \
       MANDIR=$pkgdir/usr/share/man \
       all install-doc
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
