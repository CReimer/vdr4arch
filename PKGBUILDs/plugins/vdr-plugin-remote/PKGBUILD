# Maintainer: Christopher Reimer <c[dot]reimer[at]googlemail[dot]com>
pkgname=vdr-plugin-remote
pkgver=0.4.0
_vdrapi=1.7.28
pkgrel=1
pkgdesc="This plugin extends the remote control capabilities of vdr"
url="http://www.escape-edv.de/endriss/vdr/"
arch=('x86_64' 'i686')
license=('GPL2')
depends=("vdr-api=${_vdrapi}")
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=''
_plugname=$(echo $pkgname | sed 's/vdr-plugin-//g')
source=("vdr-${_plugname}-${pkgver}.tgz"
        'make.global.diff'
        'remote-0.4.0_remove_oldi18n.diff'
        '70-remote-device.rules')
md5sums=('336fa829fc24100d47545094218141a6'
         '3d4e416893a8f15e1e9d87b144dde43b'
         'd9969bd002e4c0b5289203c02a18f26b'
         '3e5fa190135b128a575dd90b14c4433a')

package() {
  cd "${srcdir}/${_plugname}-${pkgver}"

  patch -p1 -i ${srcdir}/make.global.diff
  patch -p1 -i ${srcdir}/remote-0.4.0_remove_oldi18n.diff

  mkdir -p $pkgdir/usr/lib/vdr/plugins
  make VDRDIR=/usr/include/vdr \
       LIBDIR=$pkgdir/usr/lib/vdr/plugins \
       LOCALEDIR=$pkgdir/usr/share/locale

  install -Dm644 ${srcdir}/70-remote-device.rules "$pkgdir/usr/lib/udev/rules.d/70-remote-device.rules"

  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
  pkgver=${pkgver}_${_vdrapi}
}
