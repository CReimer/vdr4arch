pkgname=nopacity-logos
pkgver=20140102
pkgrel=1
pkgdesc="Channellogos for skin nOpacity and tvguide"
arch=('any')
url="http://creimer.net/channellogos/"
depends=('vdr-skinnopacity')
license=('GPL2')
source=("http://creimer.net/channellogos/$pkgname-default-$pkgver.tar.xz"
        "http://creimer.net/channellogos/$pkgname-white-$pkgver.tar.xz")
md5sums=('d0b5d4db9b7a5ecb6cc38a030db422b8'
         '11b2594aa07b7c2ac4856c8651f36801')

package() {
  mkdir -p "$pkgdir/usr/share/vdr/plugins/skinnopacity/logos"
  cd "$pkgdir/usr/share/vdr/plugins/skinnopacity/logos"
  cp -r "$srcdir/nopacitylogos/white" .
  cp -r "$srcdir"/nopacitylogos/default/* .

  ln -s white blue
  ln -s white darkblue
  ln -s white darkred
  ln -s white darkredNG
  ln -s white green
  ln -sr "$pkgdir/usr/share/vdr/plugins/skinnopacity/logos" \
    "$pkgdir/usr/share/vdr/plugins/tvguide/channellogos"
}
